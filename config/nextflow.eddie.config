/*
 * ------------------------------------------------------
 *  Based on the nf-core/rnaseq Nextflow base config file
 * ------------------------------------------------------
 */

executor{
  name = "uge"
	queueSize = 250
  cpu = 1
  memory = 8.GB
  time = 23.h
}

process {

  beforeScript = """
  . /etc/profile.d/modules.sh
  sleep 2;
  module load anaconda
  source activate DataPy
  module load R/3.5.3
  module load roslin/gcc
  """
  penv = "sharedmem"

  cpus = 1
  memory = 4.GB
  time = 4.h
  clusterOptions = "-P roslin_ctlgh -l h_vmem=${memory.toString().replaceAll(/[\sB]/,'')}"

  errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'terminate' }
  maxRetries = 5
  maxErrors = '-1'

  withName: prune {
    module = 'igmm/apps/plink/1.90b4'
    executor = "uge"
    cpus = 2
  }
  withName: transpose {
    module = 'igmm/apps/plink/1.90b4'
    executor = "uge"
    cpus = 2
  }
  withName: makeBSlists {
    module = 'igmm/apps/plink/1.90b4'
    executor = "uge"
    cpus = 1
    clusterOptions = "-P roslin_ctlgh -l h_vmem=${memory.toString().replaceAll(/[\sB]/,'')}"
  }
  withName: getBSlists {
    executor = "uge"
    cpus = 1
    clusterOptions = "-P roslin_ctlgh -l h_vmem=${memory.toString().replaceAll(/[\sB]/,'')}"
  }
  withName: admixboost {
    module = 'igmm/apps/plink/1.90b4'
    executor = "uge"
    cpus = 4
    clusterOptions = "-P roslin_ctlgh -l h_vmem=${memory.toString().replaceAll(/[\sB]/,'')}"
  }
  withName: clumpp {
    executor = "uge"
    cpus = 1
    clusterOptions = "-P roslin_ctlgh -l h_vmem=${memory.toString().replaceAll(/[\sB]/,'')}"
  }
  withName: getCVerrors {
    executor = "uge"
    cpus = 1
    clusterOptions = "-P roslin_ctlgh -l h_vmem=${memory.toString().replaceAll(/[\sB]/,'')}"
  }
  withName: getHprimes {
    executor = "sge"
    cpus = 1
    clusterOptions = "-P roslin_ctlgh -l h_vmem=${memory.toString().replaceAll(/[\sB]/,'')}"
  }
  withName: makePlots {
    executor = "local"
    cpus = 1
  }
}
